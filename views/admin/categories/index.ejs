<%- include ('../../partials/header.ejs') %> 
<%- include ('../../partials/navbar.ejs') %>

    <div class="container">
        <br>
        <h2>categorias</h2>
        <a href="/admin/categories/new" class="btn btn-success">Criar nova Categoria</a>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Açoes</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(categories =>{%>
                    <tr>
                        <th><%= categories.id%></th>
                        <th><%= categories.title%></th>
                        <th><%= categories.slug%></th>
                        <th>
                            <a href="/admin/categories/edit/<%= categories.id%>" class="btn btn-warning">Editar</a>

                            <form action="/categories/delete" method="POST" onsubmit="confirmDelete(event, this)" style="display: inline;" >
                                <input type="hidden" name="id" value= "<%= categories.id%>">
                                <button class="btn btn-danger">Excluir</button>
                            </form>

                        </th>
                    </tr>
                <% })%>
            </tbody>
        </table>
    </div>

<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decision = confirm('Você deseja deletar esta categoria ?');
        if(decision){
            form.submit();
            console.log('Eu escolhi Deletar')
        }else{
            console.log('Não quero deletar')
        }
    }
</script>