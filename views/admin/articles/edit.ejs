<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">    
            <h2>Edição de</h2>
        </div>
        <div class="card-body">    
            <form action="/article/update" method="POST">
                <input type="hidden" name="id" value="<%= article.id %>">
                <input class="form-control" type="text" name="title" placeholder="Defina o titulo do artigo" value="<%= article.title %>"> <br>
                <textarea name="body" class="form-control" id="article" placeholder="Escreva o artigo aqui" id="" cols="30" rows="10"></textarea><br>
                <label for="">Categoria</label>
                <select name="category" id="" class="form-control">
                    <% categories.forEach((category)=>{%>
                        <%if(category.id == article.category.id){%>
                            <option value="<%= category.id %>" selected=""> <%= category.title %></option>   
                        <%}else{<option value="<%= category.id %>"> <%= category.title %></option>   }%>
                         
                    <%}) %>
                </select>
                <br>
                <button class="btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>
<div id="content" style="display: none;">
    <%= article.body %>
</div>

<%- include ('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticon '
        ],
         init_instance_callback: ()=>{
             tinymce.get('article').setContent($("content").html)
         }
    })
</script>